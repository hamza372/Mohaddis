                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@drawable/make_cornor_round"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view19"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background=" #0e9039"
                    app:layout_constraintBottom_toTopOf="@+id/imageView14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="03227222288 \nA/c Title: Kitabosunnat.com \nA/c no: 0093-01875659 \nBank Alfalah Limited \nBranch Urdu Bazar, Lahore \n(Swift Code: ALFPKKA093) \nIBAN: PK73 \nALFH 0093 0010 0277 7251"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    app:fontFamily="@font/urdu_font_family"
                    tools:layout_editor_absoluteX="187dp"
                    tools:layout_editor_absoluteY="172dp" />

            </LinearLayout>
        </LinearLayout>
